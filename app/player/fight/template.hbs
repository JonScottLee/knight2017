<h2 class="sub-header">Monster Hunting</h2>
{{outlet}}
{{currentEnemy}}
{{#if enemyKilled}}
	<p class="alert alert-success">
		You killed the enemy!
	</p>
{{/if}}

{{#unless enemyKilled}}
	{{#each model.enemy as |enemy|}}
		{{enemy.name}} <span class="badge">{{enemy.hp}}</span>
	{{/each}}
{{/unless}}

<div>
	{{#unless inBattle}}
		<button class="btn btn-primary" {{action 'beginFight'}} disabled={{beginBtnDisabled}}>{{beginButtonText}}</button>
	{{/unless}}

	{{#if inBattle}}
		<button class="btn btn-danger" {{action 'playerAction'}} disabled={{attackBtnDisabled}}>{{playerActionText}}</button>
	{{/if}}
</div>