<h2 class="sub-header">Monster Hunting</h2>
{{outlet}}

EXP: <span class="badge">{{model.player.exp.current}} / {{model.player.exp.cap}}</span>

{{currentEnemy}}
{{#if enemyKilled}}
	<p class="alert alert-success">
		You killed the enemy!
	</p>
{{/if}}

{{#unless enemyKilled}}

	{{battle/hp-bar entity=model.player backgroundColor=playerHPColor}}

	{{#each model.enemy as |enemy|}}
		{{battle/hp-bar entity=enemy backgroundColor=enemyHPColor}}
	{{/each}}
{{/unless}}

<div>
	{{#unless inBattle}}
		<button class="btn btn-primary" {{action 'beginFight'}} disabled={{beginBtnDisabled}}>{{beginButtonText}}</button>
	{{/unless}}

	{{#if inBattle}}
		<button class="btn btn-danger" {{action 'playerAction'}} disabled={{attackBtnDisabled}}>{{attackBtnText}}</button>
	{{/if}}
</div>