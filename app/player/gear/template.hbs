<h2 class="sub-header">Items</h2>

<div class="table-responsive">
 <table class="table table-striped">
   <thead>
     <tr>
       <th>Qty</th>
       <th>Name</th>
       <th>Desc</th>
       <th></th>
       <th>Actions</th>
       <th>Drop</th>
     </tr>
   </thead>
   <tbody>
	{{#each model.inventory as |item|}}
		{{#if item.wearable}}
  			{{#item/card--mini item=item tagName=""}}
          {{#if item.equipped}}
            <td>
              <strong style="color: green">Equipped</strong>
            </td>
            <td>
              <button class="btn btn-warning btn-xs" {{action 'remove' item model}}>Remove</button>
            </td>
          {{else}}
            <td></td>
            <td>
              <button class="btn btn-success btn-xs" {{action 'equip' item model}}>Equip</button>
            </td>
          {{/if}}
	  			<td>
	  				<button class="btn btn-danger btn-xs" {{action 'drop' item}}>Drop</button>
	  			</td>
  			{{/item/card--mini}}
   		{{/if}}
	{{/each}}
  </tbody>
 </table>
</div>

{{#each model.equippedItems as |item|}}
  {{#if item.wearable}}
      {{#item/card--mini item=item tagName=""}}
        <td>
          <button class="btn btn-success btn-xs" {{action 'equip' item model}}>Equip</button>
        </td>
        <td>
          <button class="btn btn-warning btn-xs" {{action 'remove' item model}}>Remove</button>
        </td>
        <td>
          <button class="btn btn-danger btn-xs" {{action 'drop' item}}>Drop</button>
        </td>
      {{/item/card--mini}}
    {{/if}}
{{/each}}